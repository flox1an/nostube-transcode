# Nostr Configuration
# Your DVM's Nostr private key (hex format)
NOSTR_PRIVATE_KEY=your_private_key_here

# Comma-separated list of Nostr relay URLs
NOSTR_RELAYS=wss://relay.damus.io,wss://relay.nostr.band,wss://nos.lol

# Blossom Configuration
# Comma-separated list of Blossom upload server URLs
BLOSSOM_UPLOAD_SERVERS=https://blossom.example.com

# Number of days to keep blobs before cleanup (default: 30)
BLOSSOM_BLOB_EXPIRATION_DAYS=30

# Payment Integration (Optional)
# LNbits URL for payment integration
# LNBITS_URL=https://your-lnbits-instance.com
# LNBITS_ADMIN_KEY=your_admin_key_here
