# Nostr private key (64-char hex)
NOSTR_PRIVATE_KEY=<64-char-hex-private-key>

# Comma-separated list of relay URLs
NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol

# Comma-separated list of Blossom server URLs
BLOSSOM_UPLOAD_SERVERS=https://blossom.example.com

# Number of days before blobs expire (default: 30)
BLOSSOM_BLOB_EXPIRATION_DAYS=30

# Optional: Logging level
RUST_LOG=dvm=debug,nostr_sdk=info
